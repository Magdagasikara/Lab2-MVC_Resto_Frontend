<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lab2_MVC_Resto_Frontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Lab2_MVC_Resto_Frontend.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.cdnfonts.com/css/pastel-crayon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer">
</head>
<body>
    <div class="container>

        <main role="main" class="pb-3">
        @RenderBody()
        </main>
    </div>
    @* det ska komma nån annanstans????.....*@
    <div class="offcanvas offcanvas-center offcanvas-dark" tabindex="-1" id="offcanvasDeal" aria-labelledby="offcanvasDealLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasDealLabel">Deal of the Day</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body" id="offcanvasContent">
            <!-- Dynamiskt innehåll -->
            <partial name="_DealOfTheDay" />
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
